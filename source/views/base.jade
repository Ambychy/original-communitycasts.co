block vars
doctype html
html
  head
    title Video Hub | #{title}
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/components/bootswatch-dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/components/font-awesome/css/font-awesome.min.css')
    link(rel='stylesheet', href='/css/main.css')
    block styles
  body
    .navbar.navbar-default
      .container-fluid
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') Video Hub
        .navbar-collapse.collapse
          ul.nav.navbar-nav
            li.active
              a(href='/') Home
            if tags.length > 0
              li.dropdown
                a.dropdown-toggle(href='#', data-toggle='dropdown')
                  | Learn 
                  span.caret
                ul.dropdown-menu
                    each tag in tags
                      li
                        a(href='/screencasts/tagged/#{encodeURIComponent(tag.tagName)}')
                          | #{tag.tagName}
                          span.label.label-default.technology-label=tag.count
          ul.nav.navbar-nav.navbar-right
            li
              a(href='/screencasts/submit')
                i.fa.fa-plus
                | Submit
    .container
      block body
    
    footer.footer
      div.container
        p Made in the United Kingdom with by <a href="/">Booker</a>.

    script(src='/components/jquery/dist/jquery.min.js')
    script(src='/components/bootswatch-dist/js/bootstrap.min.js')
    block scripts