block vars
doctype html
html
  head
    title Video Hub | #{title}
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='vendor/bootstrap/dist/css/bootstrap.min.css')
  body
    .navbar.navbar-default
      .container-fluid
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') Video Hub
        .navbar-collapse.collapse
          ul.nav.navbar-nav
            li.active
              a(href='/') Home
            li.dropdown
              a.dropdown-toggle(href='#', data-toggle='dropdown')
                | Learn 
                span.caret
              ul.dropdown-menu
                each technology in technologies
                  li
                    a(href='/technologies/#{technology}')=technology
          ul.nav.navbar-nav.navbar-right
            li
              a(href='/submit') Submit video
    .container
      block body
    script(src='vendor/jquery/dist/jquery.min.js')
    script(src='vendor/bootstrap/dist/js/bootstrap.min.js')
    block scripts
