extends base

block vars
  - var title = "Home"

block body
  if technology
    h1 Showing videos for #{technology}
  
  .jumbotron
    h1 Video Hub
    p Video Hub is the place to find new programming screencasts on <a href="youtube.com">YouTube</a>. Have a gander and learn something new or <a href="/submit">submit</a> your own screencast.
    
  h2 Popular <small>all time</small>
  table.table
    tbody
      each video in videos
        tr
          td 
            a(href="/videos/#{video.videoId}" target="_blank") #{video.title}
          td 
            span.fa.fa-user
            span    
            a(href="/channel/#{video.channelId}" target="_blank") #{video.channelName}
          td
            span.fa.fa-folder-o
            span    
            a(href="/technologies/#{video.technologies[0]}" target="_blank")=video.technologies[0]
            if video.technologies.length === 2
              span , 
              a(href="/technologies/#{video.technologies[1]}" target="_blank")=video.technologies[1]
          td
            span.fa.fa-clock-o 
            |      #{video.duration}
